#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{ 
    int a,b,c;
	cout<<"Ingrese el primer numero : ";
	cin>> a;
	cout<<"Ingrese el segundo numero : ";
	cin>> b;
	cout<<"Ingrese el tercer numero : ";
	cin>> c;
	if ((a>=b)&&(a>=c))
		cout<<"El mayor es:"<<a;
	else
	  if ((b>=a)&&(b>=c))
		   cout<<"El mayor es:"<<b;
	  else
		   cout<<"El mayor es:"<<c;
	  
	  
	getch();
}
