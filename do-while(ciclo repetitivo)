#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float b,h,p;
	char resp;
	do
	{ cout<< "ingrese la base: " <<endl;
	  cin>>b;
	  cout<< "ingrese la altura: " <<endl;
	  cin>>h;
	  p=(b*h)/2;
	  cout<< "el area es: " <<p;
	  cout<< "Desea continuar: (y)es " <<endl;
	  cin>>resp;
	}while (resp=='y');
	getch();
}

